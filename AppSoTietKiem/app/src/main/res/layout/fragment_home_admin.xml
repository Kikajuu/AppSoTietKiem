<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/id_CardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="30sp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/cam"
        app:cardCornerRadius="16dp" >

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/tvStk"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Số Tài Khoản: 1900190099 "
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tvSoDu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Số Dư: 10.000.000 VND  "
            android:textAlignment="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/tvTen"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:gravity="center"
            android:text="TRINH VAN VU  "
            android:textAlignment="center"
            android:textSize="25dp" />
    </android.support.v7.widget.CardView>

    <RelativeLayout

        android:background="@drawable/ic_wave"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/tvXinchao"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Xin Chào: Trịnh Văn Vũ"

            android:textSize="25dp" />

    </RelativeLayout>

</RelativeLayout>